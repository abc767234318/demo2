<!--pages/details/details.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">商品详情</view>
  </cu-custom>

<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" data-src="{{item}}" bindtap="previewImage"></image>
    </swiper-item>
  </block>
</swiper>


<scroll-view scroll-y="true">
  <view class="detail">
    <text class="title">产品名称：{{goodname}}</text>
    <text class="price">单价：¥{{goodprice}}</text>
  </view>
  <view class="separate"></view>
  <!-- sku选择 -->
  <text bindtap="toggleDialog">请选择购买数量</text>
  <text>商品评价</text>
  <text class="text-remark">东西还可以，好评~</text>
  <view class="separate"></view>
  <text>商品详情</text>


<image src="../../images/1.png" mode="aspectFill">  
</image>

  <view class="temp"></view>
</scroll-view>
<!-- 底部悬浮栏 -->
<van-goods-action>
  <van-goods-action-icon
    icon="chat-o"
    text="联系卖家"
    bind:click="onClickIcon2"
  />
  <van-goods-action-icon
    icon="cart-o"
    text="购物车"
    bind:click="onClickIcon1"
  />
  <van-goods-action-button
    text="加入购物车"
    type="warning"
    bind:click="cart"
  />
  <van-goods-action-button
    text="立即购买"
    bindtap="buy"
  />
</van-goods-action>